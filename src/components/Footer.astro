            </svg>
          </a>
        </div>
      </div>

      <div class="flex flex-col gap-3">
        <h3 class="font-semibold pb-5">{data.careers}</h3>
        <ul class="flex flex-col gap-2 text-gray-400">
          {
            programs.map((program) => (
              <li>
                <a
                  href={program.data.url}
                  class="hover:text-main-blue duration-200 font-medium"
                >
                  {program.data.title}
                </a>
              </li>
            ))
          }
        </ul>
      </div>
      <div class="flex flex-col gap-3 lg:min-w-36">
        <h3 class="font-semibold pb-5">{data.aboutUs}</h3>
        <ul class="flex flex-col gap-2 text-gray-400">
          {
            navbarLinks[3].submenu.map((link) => (
              <li>
                <a
                  href={link.link}
                  class="hover:text-main-blue duration-200 font-medium"
                >
                  {link.name}
